<%= form_for @user, url: user_session_path, html: { class: 'signin-form' } do |f| %>

    <h1>Login</h1>

    <div>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>

    <div>
      <%= f.submit "Login", class: 'btn btn-success btn-large' %>

      <div>
        <%= link_to "forgot password?", new_user_password_path %>
        <br />
        <%= link_to "register", new_user_registration_path %>
      </div>
    </div>

  <% end %>
